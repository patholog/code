		<action name="admin_*" method="{1}" class="com.flp.actions.UsersAction">
			<result name="loginSuc">/admin/AdminIndex.jsp</result>
			<result name="loginFal">/admin/AdminLogin.jsp</result>
			<result name="logoutSuc">/admin/AdminLogin.jsp</result>
			<result name="addAdminSuc">/admin/AdminIndex.jsp</result>
			<result name="failure">/Error.jsp</result>
			<result name="userList">/admin/UserList.jsp</result>
			<result name="findAllUser" type="redirectAction">admin_findAllUser</result>
			<result name="allCat">/admin/TypeList.jsp</result>
			<result name="catList" type="redirectAction">admin_catList</result>
		</action>-->
		<action name="UserAction" class="com.pathology.action.UsersAction">

			<result name="success"> /manage/user/userlist.jsp</result>
			<result name="deletesuccess" type="redirectAction">UserAction!userList</result>
			<result name="updatesuccess" type="redirectAction">UserAction!userList</result>
			<result name="edit"> /manage/user/update_user.jsp</result>
			<result name="registsuccess"> /login.jsp</result>
		</action>
		<action name="HospitalAction" class="com.pathology.action.HospitalAction">
			<result name="success"> /manage/hospital/hospitallist.jsp</result>
			<result name="deletesuccess" type="redirectAction">HospitalAction!hospitalList</result>
			<result name="updatesuccess" type="redirectAction">HospitalAction!hospitalList</result>
			<result name="dilog"> /manage/user/update_user.jsp</result>
		</action>
	</package>
</struts>
